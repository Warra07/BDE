{% extends 'layout/layout.html.twig' %}

{% block body %}
        <section class="container-fluid">
            <div class="article-container-header">
            Evenements pass√©s
            </div>  
            <div class="center-inside">
                <div class="my-article-container">
                    <div class="alphabg  container-fluid" style="margin:10px;">
                        <a style="text-decoration: none;" href=""><div class="article-header" style="width:100%">
                           {{ancienne.activite.titre}}
                        </div></a>
                        
                    <div class="carousel-contain" style="width:60%; float:left;">
                        <div class="container-fluid" id="content">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Wrapper for slides -->
                        
                        <div class="carousel-inner" role="listbox">
                           {% for img in ancienne.album %}
                            <div {% if loop.index0 == 0 %} class="item active" {% else %} class="item" {% endif %}>
                                <div style="width: 100%; height:300px; margin-left: auto; margin-right: auto; overflow: hidden; display:block; top:0; left: 0; right: 0; bottom: 0; background-image:url({{asset(img.image.AssetPath)}}); background-repeat: no-repeat; background-size: contain; background-position: center;">
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                          <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                        

                    </div>
                </div>
            </div>
                        
                        <div class="article-main container-fluid" style="width:100%">
                                {{ancienne.activite.texte}}
